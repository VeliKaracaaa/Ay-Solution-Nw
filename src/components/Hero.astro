---
import { Image } from "astro:assets";
import heroImage from "../content/img/hero.png";
import customer1 from "../content/img/customers/customer-1.jpg";
import customer2 from "../content/img/customers/customer-2.jpg";
import customer3 from "../content/img/customers/customer-3.jpg";
import customer4 from "../content/img/customers/customer-4.jpg";
import customer5 from "../content/img/customers/customer-5.jpg";
import customer6 from "../content/img/customers/customer-6.jpg";
---

<section class="bg-sky-100 py-24">
    <div
        class="grid grid-cols-2 max-w-screen-xl mx-auto my-0 items-center gap-24"
    >
        <div>
            <h1 class="text-8xl text-gray-700 tracking-tighter mb-20 font-bold">
                A healthy meal delivered to your door, every single day
            </h1>
            <p class="text-4xl mb-20">
                The smart 365-days-per-year food subscription that will make you
                eat healthy again. Tailored to your personal tastes and
                nutritional needs.
            </p>
            <a
                href="#"
                class="inline-block rounded-xl bg-sky-400 px-8 py-4 text-4xl font-semibold text-white hover:bg-sky-500 active:bg-sky-500 transition-colors duration-300 mr-4"
                >Start eating well</a
            >
            <a
                href="#"
                class="inline-block rounded-xl bg-white px-8 py-4 text-4xl font-semibold text-black shadow-sm hover:bg-sky-100 hover:ring-4 hover:ring-inset hover:ring-white active:bg-sky-100 transition-colors duration-300"
                >Learn more &darr;</a
            >
            <div class="flex items-center gap-4 mt-32">
                <div class="flex">
                    <Image
                        src={customer1}
                        alt="customer"
                        class="h-20 w-20 rounded-full -mr-4 border-solid"
                    />
                    <Image
                        src={customer2}
                        alt="customer"
                        class="h-20 w-20 rounded-full -mr-4 border-4 border-solid border-white"
                    />
                    <Image
                        src={customer3}
                        alt="customer"
                        class="h-20 w-20 rounded-full -mr-4 border-4 border-solid border-white"
                    />
                    <Image
                        src={customer4}
                        alt="customer"
                        class="h-20 w-20 rounded-full -mr-4 border-4 border-solid border-white"
                    />
                    <Image
                        src={customer5}
                        alt="customer"
                        class="h-20 w-20 rounded-full -mr-4 border-4 border-solid border-white"
                    />
                    <Image
                        src={customer6}
                        alt="customer"
                        class="h-20 w-20 rounded-full"
                    />
                </div>
                <p class="text-3xl font-semibold">
                    <span class="text-sky-500 font-bold"
                        >250,000+
                    </span>delivered meals last year!
                </p>
            </div>
        </div>
        <div>
            <Image src={heroImage} alt="Hero image" />
        </div>
    </div>
</section>
