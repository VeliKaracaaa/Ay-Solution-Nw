---
import { Image } from "astro:assets";
import heroImage from "../content/img/hero.png";
import customer1 from "../content/img/customers/customer-1.jpg";
import customer2 from "../content/img/customers/customer-2.jpg";
import customer3 from "../content/img/customers/customer-3.jpg";
import customer4 from "../content/img/customers/customer-4.jpg";
import customer5 from "../content/img/customers/customer-5.jpg";
import customer6 from "../content/img/customers/customer-6.jpg";

const customers = [
    { src: customer1, alt: "customer 1" },
    { src: customer2, alt: "customer 2" },
    { src: customer3, alt: "customer 3" },
    { src: customer4, alt: "customer 4" },
    { src: customer5, alt: "customer 5" },
    { src: customer6, alt: "customer 6" },
];
---

<section class="bg-sky-100 pt-16 pb-24">
    <div
        class="max-w-screen-2xl mx-auto grid grid-cols-2 items-center gap-24 my-0 py-0 px-8 lg:gap-12"
    >
        <div>
            <h1
                class="text-8xl text-sky-700 tracking-tighter font-bold mb-20 lg:text-7xl"
            >
                Transformez votre entreprise avec notre expertise
            </h1>
            <p class="text-4xl leading-normal mb-20 lg:text-3xl">
                Services complets : Sécurité éléctronique, Informatique &
                Télécom, Digitale, Gestion d'encaissement
            </p>
            <a
                href="#"
                class="inline-block rounded-xl bg-sky-400 px-5 py-4 text-3xl font-semibold text-white hover:bg-sky-800 active:bg-sky-800 transition-colors duration-300 mr-4 lg:text-2xl"
            >
                Contactez-nous: 07025026014
            </a>
            <a
                href="#nos-solutions"
                class="inline-block rounded-xl bg-white px-5 py-4 text-4xl font-semibold text-black shadow-sm hover:bg-sky-100 hover:ring-4 hover:ring-inset hover:ring-white active:bg-sky-100 transition-colors duration-300 lg:text-2xl"
            >
                En savoir plus &darr;
            </a>
            <div class="flex items-center gap-4 mt-32 lg:mt-20">
                <div class="flex">
                    {
                        customers.map((customer) => (
                            <Image
                                src={customer.src}
                                alt={customer.alt}
                                class="h-20 w-20 rounded-full -mr-4 border-4 border-solid border-sky-100 lg:h-16 lg:w-16"
                            />
                        ))
                    }
                </div>
                <p class="text-3xl font-semibold lg:text-2xl">
                    <span class="text-sky-500 font-bold">60+ </span>entreprises
                    nous font confiance
                </p>
            </div>
        </div>
        <div>
            <Image src={heroImage} alt="Hero image" />
        </div>
    </div>
</section>
