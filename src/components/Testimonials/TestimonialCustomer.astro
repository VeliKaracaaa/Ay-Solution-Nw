---
import { Image } from "astro:assets";
const { testimonials } = Astro.props;
---

<div class="container mx-auto">
    <div class="flex flex-wrap">
        {
            testimonials.map((testimonial) => (
                <div class="w-full md:w-1/2 mb-8 p-4">
                    <div class="flex flex-col gap-y-3 xl:gap-y-8">
                        <figure>
                            <Image
                                src={testimonial.src}
                                alt={`Image of ${testimonial.name}`}
                                class="rounded-full w-24"
                            />
                        </figure>
                        <blockquote class="text-2xl mb-4 leading-normal 2xl:text-3xl">
                            {testimonial.text}
                        </blockquote>
                        <p class="text-xl 2xl:text-2xl">â€” {testimonial.name}</p>
                    </div>
                </div>
            ))
        }
    </div>
</div>
