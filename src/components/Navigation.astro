---
const navLinks = [
    { text: "Acceuil", href: "/", style: "text-gray-800 hover:text-sky-800" },
    {
        text: "Nos solutions",
        href: "#nos-solutions",
    },
    {
        text: "TÃ©moignages",
        href: "#temoignages",
    },
    { text: "Blog", href: "/blog" },
];
---

<style>
    .nav-open {
        opacity: 1;
        pointer-events: auto;
        visibility: visible;
        transform: translateX(0);
    }
</style>

<!-- 1) hide visually opacity-0 2) make it unaccesible to mouse and keybord pointer-events-none 3) hide it from screen readers invisible -->
<nav
    class="nav-links fixed top-0 left-0 flex items-center justify-center sm:relative sm:transform-none sm:bg-transparent sm:opacity-100 sm:pointer-events-auto sm:visible transform translate-x-full bg-white/95 opacity-0 pointer-events-none invisible w-full h-screen sm:h-auto sm:w-auto transition-all duration-500 ease-in"
>
    <ol class="flex flex-col items-center gap-12 sm:flex-row sm:gap-8">
        {
            navLinks.map((link) => (
                <li>
                    <a
                        href={link.href}
                        class="inline-block text-gray-800 text-3xl font-medium uppercase hover:text-sky-800 active:text-sky-800 transition-colors duration-300 sm:text-base md:text-lg lg:text-xl xl:text-2xl"
                    >
                        {link.text}
                    </a>
                </li>
            ))
        }
        <li>
            <a
                href="#demandez-un-devis"
                class="inline-block bg-sky-400 text-white text-3xl rounded-xl py-3 px-6 font-medium hover:bg-sky-800 active:bg-sky-800 transition-colors duration-300 sm:text-lg md:text-xl lg:text-2xl xl:text-3xl"
                >Demandez un devis</a
            >
        </li>
    </ol>
</nav>
