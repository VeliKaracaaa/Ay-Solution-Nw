---
import Navigation from "./Navigation.astro";
import Hamburger from "./Hamburger.astro";
import { Image } from "astro:assets";
import aySolutionLogo from "../content/img/logos/ay-solution.png";
---

<!-- We want to heade to be sticky later --><!-- fixed top-0 w-full z-50 -->
<header
    class="header relative flex justify-between items-center h-auto px-8 bg-white"
>
    <Image
        src={aySolutionLogo}
        alt="ay solution logo"
        class="h-28 w-32 sm:h-36 sm:w-40"
    />
    <Hamburger />
    <Navigation />
</header>
